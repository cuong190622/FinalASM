@model IEnumerable<FinalASM.Models.TrainerEntity>
@{
    Layout = "~/Views/ASM/_LayoutForAdmin.cshtml";
    ViewBag.Title = "Admin";
}


@Html.Partial("_PartialPageUserInfo")
<div class="body">
    <div class="title">
        <span class="font-weight-bold">All Trainer</span>
    </div>
    <div class="grid-view">
        <table class="table">
            <thead>
                <tr style="border: 1px solid #8b46be;">
                    <th scope="col">NO</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.Username)</th>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">&nbsp;</th>aaaaaaaaaaaaaaaaaadasdasda
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr style="border: 1px solid #8b46be;">
                        <th scope="row">@Html.DisplayFor(model => c.Id)</th>
                        <td>@Html.DisplayFor(m => c.Username)</td>
                        <th scope="col">&nbsp;</th>
                        <td><a class="btn btn-primary" href="@Url.Action("DTrainer", new {id = c.Id})" role="button">ViewMore</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
